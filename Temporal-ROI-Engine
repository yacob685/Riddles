    <!-- Scripts -->
    <script>
        // --- ROUTER SYSTEM ---
        const pages = ['landing', 'auth', 'app'];
        
        function router(pageId) {
            // Hide all pages
            pages.forEach(p => {
                document.getElementById(`page-${p}`).classList.remove('active');
                setTimeout(() => {
                   if(!document.getElementById(`page-${p}`).classList.contains('active')) {
                       document.getElementById(`page-${p}`).style.display = 'none';
                   }
                }, 400); 
            });

            // Show target page
            const target = document.getElementById(`page-${pageId}`);
            target.style.display = 'block';
            setTimeout(() => {
                target.classList.add('active');
            }, 10);

            // Nav State Logic
            const authNav = document.getElementById('nav-auth-display');
            const guestNav = document.getElementById('nav-guest-display');

            if (pageId === 'app') {
                authNav.classList.remove('hidden');
                authNav.classList.add('flex');
                guestNav.classList.add('hidden');
            } else {
                authNav.classList.add('hidden');
                authNav.classList.remove('flex');
                guestNav.classList.remove('hidden');
            }
        }

        // --- AUTH SYSTEM ---
        let isSignup = false;

        function login() {
            const btn = document.getElementById('btn-login');
            const originalText = btn.innerText;
            const username = document.getElementById('auth-username').value;
            
            // UI Feedback
            btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> PROCESSING...';
            btn.classList.add('bg-cyan-400', 'text-black');
            
            setTimeout(() => {
                btn.innerText = originalText;
                btn.classList.remove('bg-cyan-400', 'text-black');
                
                // Save user and init
                localStorage.setItem('chronos_user', username);
                router('app');
                initEngine();
            }, 1000);
        }

        function logout() {
            router('landing');
        }

        // --- DATA & STATE ---
        let artifacts = [];
        let historyLog = [];
        let events = []; // { date: "YYYY-MM-DD", type: "holiday"|"test", name: "", subject: "" }
        let weeklySchedule = [
            { id: 0, day: 'Sunday', active: false, start: '09:00', end: '17:00' },
            { id: 1, day: 'Monday', active: true, start: '09:00', end: '17:00' },
            { id: 2, day: 'Tuesday', active: true, start: '09:00', end: '17:00' },
            { id: 3, day: 'Wednesday', active: true, start: '09:00', end: '17:00' },
            { id: 4, day: 'Thursday', active: true, start: '09:00', end: '17:00' },
            { id: 5, day: 'Friday', active: true, start: '09:00', end: '17:00' },
            { id: 6, day: 'Saturday', active: false, start: '09:00', end: '17:00' }
        ];

        let totalScore = 0;
        let settings = { peakHour: 10, prioritySubjects: [] };
        let engineInterval;
        let currentEnergy = 0;

        const availableSubjects = ["Maths", "Biology", "Chemistry", "Physics", "History", "Literature", "SLR", "Coding"];

        function initEngine() {
            loadData();
            renderArtifacts();
            renderLog();
            renderScheduleInputs();
            renderEventList();
            renderSettingsPriority();
            
            if (engineInterval) clearInterval(engineInterval);
            engineInterval = setInterval(tick, 1000);
            tick();
        }

        function loadData() {
            const savedArtifacts = localStorage.getItem('chronos_artifacts');
            if (savedArtifacts) {
                artifacts = JSON.parse(savedArtifacts);
                artifacts.forEach(a => a.created = new Date(a.created));
            }

            const savedHistory = localStorage.getItem('chronos_history');
            if (savedHistory) {
                historyLog = JSON.parse(savedHistory);
                historyLog.forEach(h => h.date = new Date(h.date));
            }

            const savedScore = localStorage.getItem('chronos_score');
            if (savedScore) totalScore = parseInt(savedScore);
            document.getElementById('navScore').innerText = totalScore;
            document.getElementById('log-total-score').innerText = totalScore;

            const savedSettings = localStorage.getItem('chronos_settings');
            if (savedSettings) settings = JSON.parse(savedSettings);
            document.getElementById('setting-peak').value = settings.peakHour;
            document.getElementById('setting-peak-display').innerText = settings.peakHour;

            const savedSchedule = localStorage.getItem('chronos_schedule');
            if (savedSchedule) weeklySchedule = JSON.parse(savedSchedule);

            const savedEvents = localStorage.getItem('chronos_events');
            if (savedEvents) events = JSON.parse(savedEvents);
        }

        function saveData() {
            localStorage.setItem('chronos_artifacts', JSON.stringify(artifacts));
            localStorage.setItem('chronos_history', JSON.stringify(historyLog));
            localStorage.setItem('chronos_score', totalScore);
            localStorage.setItem('chronos_settings', JSON.stringify(settings));
            localStorage.setItem('chronos_schedule', JSON.stringify(weeklySchedule));
            localStorage.setItem('chronos_events', JSON.stringify(events));
        }

        function clearData() {
            if(confirm("WARNING: This will wipe all mission data. Proceed?")) {
                localStorage.clear();
                location.reload();
            }
        }

        // --- ENGINE LOGIC ---
        function tick() {
            const now = new Date();
            
            // 1. Clock Update
            document.getElementById('navTime').innerText = now.toLocaleTimeString('en-GB', { hour12: false });

            // 2. Biological Energy
            const hour = now.getHours();
            const minute = now.getMinutes();
            const decimalHour = hour + (minute / 60);
            const peak = parseInt(settings.peakHour);
            const distFromPeak = Math.abs(decimalHour - peak);
            
            let energy = distFromPeak < 4 ? 100 - (distFromPeak * 10) : 60 - ((distFromPeak - 4) * 5);
            currentEnergy = Math.max(5, Math.min(100, Math.round(energy)));
            
            document.getElementById('navEnergy').innerText = `${currentEnergy}%`;
            const appEnergyEl = document.getElementById('appEnergyDisplay');
            if(appEnergyEl) {
                appEnergyEl.innerText = `${currentEnergy}%`;
                appEnergyEl.className = `text-3xl mono font-bold mt-1 ${currentEnergy > 70 ? 'text-green-400' : (currentEnergy > 30 ? 'text-yellow-400' : 'text-red-500')}`;
            }

            // 3. Artifact Decay (Only if scheduled to work!)
            const workingStatus = checkWorkingStatus(now);
            
            if (workingStatus.shouldWork) {
                let hasChanges = false;
                artifacts.forEach(art => {
                    if (art.status === 'active') {
                        art.timeLeft--;
                        if (art.timeLeft <= 0) {
                            art.timeLeft = 0;
                            art.status = 'decayed';
                        }
                        hasChanges = true;
                    }
                });
                if (hasChanges) {
                    renderArtifacts();
                    if(now.getSeconds() % 5 === 0) saveData(); 
                }
            }

            // 4. Update Suggestion Engine
            updateSuggestionEngine(now, workingStatus);
        }

        // --- INTELLIGENT SUGGESTION ENGINE ---
        function checkWorkingStatus(date) {
            const todayStr = date.toISOString().split('T')[0];
            const dayId = date.getDay(); // 0 = Sunday
            const daySchedule = weeklySchedule.find(d => d.id === dayId);
            
            // 1. Check Events
            const todayEvent = events.find(e => e.date === todayStr);
            if (todayEvent) {
                if (todayEvent.type === 'holiday') return { shouldWork: false, reason: 'Holiday', event: todayEvent };
                if (todayEvent.type === 'test') return { shouldWork: true, reason: 'Test Day', event: todayEvent, critical: true };
            }

            // 2. Check Weekly Schedule
            if (!daySchedule.active) return { shouldWork: false, reason: 'Rest Day', event: null };

            // 3. Check Hours
            const nowMins = date.getHours() * 60 + date.getMinutes();
            const [startH, startM] = daySchedule.start.split(':').map(Number);
            const [endH, endM] = daySchedule.end.split(':').map(Number);
            const startMins = startH * 60 + startM;
            const endMins = endH * 60 + endM;

            if (nowMins >= startMins && nowMins < endMins) {
                return { shouldWork: true, reason: 'Operational Hours', event: null };
            } else {
                return { shouldWork: false, reason: 'Off-Hours', event: null };
            }
        }

        function updateSuggestionEngine(now, status) {
            const panel = document.getElementById('ai-suggestion-panel');
            const headline = document.getElementById('suggestion-headline');
            const sub = document.getElementById('suggestion-reason');
            const actionArea = document.getElementById('suggestion-action-area');
            const statusDisplay = document.getElementById('schedule-status-display');
            const nextEventDisplay = document.getElementById('next-event-display');

            // Find next event
            const todayStr = now.toISOString().split('T')[0];
            const upcomingEvent = events
                .filter(e => e.date > todayStr)
                .sort((a,b) => a.date.localeCompare(b.date))[0];
            
            let context = { testUpcoming: false, testSubject: null };

            if (upcomingEvent) {
                const daysUntil = Math.ceil((new Date(upcomingEvent.date) - now) / (1000 * 60 * 60 * 24));
                nextEventDisplay.innerText = `${daysUntil} days until ${upcomingEvent.name} (${upcomingEvent.type.toUpperCase()})`;
                if (daysUntil <= 3 && upcomingEvent.type === 'test') {
                    context.testUpcoming = true;
                    context.testSubject = upcomingEvent.subject;
                }
            } else {
                nextEventDisplay.innerText = "No impending events detected.";
            }

            statusDisplay.innerText = status.reason;

            // Logic Tree
            if (status.reason === 'Holiday') {
                panel.className = "mb-8 artifact-card p-6 rounded-xl border-l-4 border-l-green-500 relative overflow-hidden";
                headline.innerText = "SYSTEM PAUSED: HOLIDAY DETECTED";
                sub.innerText = `Event: ${status.event.name}. Recovery protocols active. Decay paused.`;
                actionArea.classList.add('hidden');
                return;
            }

            if (!status.shouldWork) {
                 panel.className = "mb-8 artifact-card p-6 rounded-xl border-l-4 border-l-slate-500 relative overflow-hidden";
                headline.innerText = "STANDBY: OFF-HOURS";
                sub.innerText = "Outside operational window. Decay paused. Recharge bio-batteries.";
                actionArea.classList.add('hidden');
                return;
            }

            if (context.testUpcoming) {
                panel.className = "mb-8 artifact-card p-6 rounded-xl border-l-4 border-l-red-500 relative overflow-hidden bg-red-900/10";
                headline.innerText = "CRITICAL ALERT: TEST APPROACHING";
                sub.innerText = `Target: ${upcomingEvent.name}. Prioritize ${context.testSubject || "relevant"} artifacts.`;
                recommendTask(true, context.testSubject);
                return;
            }

            // Normal Operation
            panel.className = "mb-8 artifact-card p-6 rounded-xl border-l-4 border-l-cyan-400 relative overflow-hidden";
            recommendTask(false, null);
        }

        function recommendTask(isCriticalMode, targetSubject) {
            const headline = document.getElementById('suggestion-headline');
            const sub = document.getElementById('suggestion-reason');
            const actionArea = document.getElementById('suggestion-action-area');
            const btn = document.getElementById('suggestion-action-area').querySelector('button');

            const activeArtifacts = artifacts.filter(a => a.status === 'active');

            if (activeArtifacts.length === 0) {
                headline.innerText = "IDLE: AWAITING INPUT";
                sub.innerText = "No artifacts in queue. Initialize new tasks to begin.";
                actionArea.classList.add('hidden');
                return;
            }

            // Scoring Algorithm
            let bestTask = null;
            let highestScore = -1000;

            activeArtifacts.forEach(task => {
                let score = 0;
                
                // 1. Urgency (Decay state)
                const percentLeft = task.timeLeft / task.totalTime;
                score += (1 - percentLeft) * 50; 

                // 2. Bio Match
                const energyRatio = currentEnergy / 100; // 0.0 - 1.0
                const complexityRatio = task.complexity / 10; // 0.1 - 1.0
                const synergy = 1 - Math.abs(energyRatio - complexityRatio);
                score += synergy * 30;

                // 3. User Priority (Settings)
                if (settings.prioritySubjects && settings.prioritySubjects.includes(task.subject)) {
                    score += 60; // Significant boost for prioritized subjects
                }

                // 4. Context Priority (Upcoming Test)
                if (isCriticalMode && targetSubject && task.subject === targetSubject) {
                    score += 200; // Massive boost for matching test subject
                } else if (isCriticalMode && !targetSubject && (task.name.toLowerCase().includes('study') || task.name.toLowerCase().includes('rev'))) {
                    score += 100; // Fallback if no subject defined but keyword match
                }

                if (score > highestScore) {
                    highestScore = score;
                    bestTask = task;
                }
            });

            if (bestTask) {
                let reason = 'Optimal Energy/Urgency Synergy';
                if(isCriticalMode && targetSubject && bestTask.subject === targetSubject) reason = 'CRITICAL: Matches Upcoming Test Subject';
                else if (settings.prioritySubjects && settings.prioritySubjects.includes(bestTask.subject)) reason = 'High Priority Subject Setting';
                
                headline.innerHTML = `DIRECTIVE: ENGAGE <span class="text-cyan-400">${bestTask.name}</span>`;
                sub.innerText = `Reason: ${reason}. Subject: ${bestTask.subject || 'General'}`;
                actionArea.classList.remove('hidden');
            }
        }

        // --- ARTIFACT MANAGEMENT ---
        function createArtifact() {
            const name = document.getElementById('taskName').value;
            const subject = document.getElementById('taskSubject').value;
            
            if (!name) return;
            const complexity = parseInt(document.getElementById('taskComplexity').value);
            const duration = parseInt(document.getElementById('taskDuration').value);

            const newArtifact = {
                id: Date.now(),
                name: name,
                subject: subject,
                complexity: complexity,
                totalTime: duration * 60,
                timeLeft: duration * 60,
                status: 'active',
                created: new Date()
            };

            artifacts.push(newArtifact);
            document.getElementById('taskName').value = '';
            saveData();
            renderArtifacts();
        }

        function removeArtifact(id) {
            const art = artifacts.find(a => a.id === id);
            if (art && art.status === 'decayed') {
                addToLog(art, 0, 'dissolved');
            }
            artifacts = artifacts.filter(a => a.id !== id);
            saveData();
            renderArtifacts();
        }

        function completeArtifact(id) {
            const art = artifacts.find(a => a.id === id);
            if (art) {
                const timeRatio = art.timeLeft / art.totalTime;
                const points = Math.round((timeRatio * art.complexity) * 100);
                
                totalScore += points;
                addToLog(art, points, 'resolved');
                
                showROIModal(points, art.complexity, Math.round(timeRatio * 100));
                
                artifacts = artifacts.filter(a => a.id !== id);
                saveData();
                renderArtifacts();
            }
        }

        function renderArtifacts() {
            const grid = document.getElementById('artifactGrid');
            const empty = document.getElementById('emptyState');
            const countDisplay = document.getElementById('activeTaskCount');

            if (artifacts.length === 0) {
                grid.innerHTML = '';
                empty.classList.remove('hidden');
                countDisplay.innerText = '0';
                return;
            }

            empty.classList.add('hidden');
            countDisplay.innerText = artifacts.filter(a => a.status === 'active').length;

            // Sort logic: decayed last, then priority score
            const sorted = [...artifacts].sort((a, b) => {
                if(a.status === 'decayed' && b.status !== 'decayed') return 1;
                if(b.status === 'decayed' && a.status !== 'decayed') return -1;

                // Basic pressure
                let pressureA = (a.totalTime - a.timeLeft) * a.complexity;
                let pressureB = (b.totalTime - b.timeLeft) * b.complexity;
                
                // Boost for priority subjects
                if(settings.prioritySubjects && settings.prioritySubjects.includes(a.subject)) pressureA += 10000;
                if(settings.prioritySubjects && settings.prioritySubjects.includes(b.subject)) pressureB += 10000;

                return pressureB - pressureA;
            });

            grid.innerHTML = sorted.map(art => {
                const percentage = (art.timeLeft / art.totalTime) * 100;
                const isCritical = percentage < 20 && art.status === 'active';
                const isDecayed = art.status === 'decayed';
                
                const cardOpacity = isDecayed ? 'opacity-50 grayscale' : 'opacity-100';
                const barColor = isCritical ? 'bg-danger' : 'bg-cyan-400';
                const textColor = isCritical ? 'text-red-500' : 'text-cyan-400';
                const pulseClass = isCritical ? 'critical-decay' : '';
                
                const isPriority = settings.prioritySubjects && settings.prioritySubjects.includes(art.subject);

                return `
                    <div class="artifact-card p-6 rounded-xl relative overflow-hidden ${cardOpacity}">
                        ${isPriority ? '<div class="absolute top-0 right-0 bg-yellow-400 text-black text-[10px] font-bold px-2 py-1 z-20">PRIORITY</div>' : ''}
                        
                        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 gap-2">
                            <div>
                                <div class="flex items-center gap-2">
                                    <span class="subject-badge bg-white/10 text-slate-300 border border-white/10">${art.subject || 'Gen'}</span>
                                    <h3 class="font-bold text-lg leading-tight ${isDecayed ? 'line-through text-slate-500' : 'text-white'}">${art.name}</h3>
                                </div>
                                <div class="flex gap-2 mt-1">
                                    <span class="text-[10px] px-2 py-0.5 rounded border border-white/10 bg-white/5 mono text-slate-400">CPX: ${art.complexity}</span>
                                    <span class="text-[10px] px-2 py-0.5 rounded border border-cyan-500/20 bg-cyan-500/10 ${textColor} mono">INTEGRITY: ${Math.round(percentage)}%</span>
                                </div>
                            </div>
                            <div class="flex gap-3">
                                ${!isDecayed ? `
                                <button onclick="completeArtifact(${art.id})" class="text-xs font-bold uppercase tracking-widest bg-white text-black px-4 py-2 rounded hover:bg-cyan-400 transition-colors">
                                    Resolve
                                </button>
                                ` : ''}
                                <button onclick="removeArtifact(${art.id})" class="text-slate-600 hover:text-red-500 transition px-2">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="flex justify-between text-[10px] uppercase text-slate-500 mb-1 mono">
                                <span>Time To Dissolution</span>
                                <span class="${pulseClass}">${formatTime(art.timeLeft)}</span>
                            </div>
                            <div class="decay-bar rounded-full bg-slate-800">
                                <div class="decay-progress ${barColor}" style="width: ${percentage}%"></div>
                            </div>
                        </div>
                        ${isDecayed ? `
                        <div class="absolute inset-0 flex items-center justify-center bg-black/80 z-10 backdrop-blur-sm">
                            <div class="text-red-600 font-bold uppercase tracking-[0.5em] border-2 border-red-600 px-6 py-2 rotate-[-5deg] glow-danger">DISSOLVED</div>
                        </div>
                        ` : ''}
                    </div>
                `;
            }).join('');
        }

        // --- SCHEDULE & EVENTS MANAGEMENT ---
        function switchTab(tabId) {
            document.getElementById('tab-week').classList.add('hidden');
            document.getElementById('tab-events').classList.add('hidden');
            document.getElementById('btn-tab-week').classList.remove('text-cyan-400', 'border-cyan-400', 'bg-white/5');
            document.getElementById('btn-tab-events').classList.remove('text-cyan-400', 'border-cyan-400', 'bg-white/5');
            
            document.getElementById(tabId).classList.remove('hidden');
            document.getElementById('btn-' + tabId).classList.add('text-cyan-400', 'border-cyan-400', 'bg-white/5');
        }

        function renderScheduleInputs() {
            const container = document.getElementById('weekly-schedule-container');
            container.innerHTML = weeklySchedule.map(day => `
                <div class="flex items-center justify-between bg-black/30 p-3 rounded border border-white/5">
                    <div class="flex items-center gap-3">
                         <div class="relative inline-block w-10 h-5 align-middle select-none transition duration-200 ease-in">
                            <input type="checkbox" name="toggle" id="toggle-${day.id}" class="toggle-checkbox absolute block w-5 h-5 rounded-full bg-white border-4 border-slate-700 appearance-none cursor-pointer transition-all duration-300" ${day.active ? 'checked' : ''} onchange="updateScheduleLocal(${day.id}, 'active', this.checked)">
                            <label for="toggle-${day.id}" class="toggle-label block overflow-hidden h-5 rounded-full bg-slate-700 cursor-pointer"></label>
                        </div>
                        <span class="text-sm font-bold w-24">${day.day}</span>
                    </div>
                    <div class="flex gap-2 ${day.active ? 'opacity-100' : 'opacity-20 pointer-events-none'} transition-opacity">
                        <input type="time" value="${day.start}" onchange="updateScheduleLocal(${day.id}, 'start', this.value)" class="bg-black border border-slate-700 text-white text-xs rounded p-1 focus:border-cyan-400 outline-none">
                        <span class="text-slate-500 self-center">-</span>
                        <input type="time" value="${day.end}" onchange="updateScheduleLocal(${day.id}, 'end', this.value)" class="bg-black border border-slate-700 text-white text-xs rounded p-1 focus:border-cyan-400 outline-none">
                    </div>
                </div>
            `).join('');
        }

        function updateScheduleLocal(id, field, value) {
            const day = weeklySchedule.find(d => d.id === id);
            if (day) day[field] = value;
            renderScheduleInputs();
        }

        function addEvent() {
            const date = document.getElementById('event-date').value;
            const name = document.getElementById('event-name').value;
            const type = document.getElementById('event-type').value;
            const subject = document.getElementById('event-subject').value;

            if (date && name) {
                events.push({ date, name, type, subject });
                document.getElementById('event-name').value = '';
                saveData();
                renderEventList();
                tick(); // force engine update
            }
        }

        function removeEvent(index) {
            events.splice(index, 1);
            saveData();
            renderEventList();
            tick();
        }

        function renderEventList() {
            const list = document.getElementById('event-list');
            list.innerHTML = events
                .sort((a,b) => a.date.localeCompare(b.date))
                .map((e, index) => `
                <div class="flex justify-between items-center bg-white/5 p-3 rounded border border-white/5 hover:border-cyan-500/30 transition">
                    <div>
                        <div class="text-[10px] text-cyan-400 mono">${e.date} ${e.subject ? ` ${e.subject}` : ''}</div>
                        <div class="font-bold text-white text-sm">${e.name}</div>
                        <div class="text-[10px] text-slate-500 uppercase tracking-widest">${e.type}</div>
                    </div>
                    <button onclick="removeEvent(${index})" class="text-slate-600 hover:text-red-500"><i class="fa-solid fa-times"></i></button>
                </div>
            `).join('');
        }

        // --- SETTINGS: PRIORITY SUBJECTS ---
        function renderSettingsPriority() {
            const container = document.getElementById('priority-subjects-container');
            const currentPriorities = settings.prioritySubjects || [];

            container.innerHTML = availableSubjects.map(subj => {
                const isActive = currentPriorities.includes(subj);
                return `
                    <div class="flex items-center justify-between p-2 rounded bg-black/30 border ${isActive ? 'border-yellow-500/50' : 'border-white/5'} cursor-pointer hover:bg-white/5 transition" onclick="togglePrioritySubject('${subj}')">
                        <span class="text-sm ${isActive ? 'text-yellow-400 font-bold' : 'text-slate-400'}">${subj}</span>
                        <div class="w-3 h-3 rounded-full border ${isActive ? 'bg-yellow-400 border-yellow-400' : 'border-slate-600'}"></div>
                    </div>
                `;
            }).join('');
        }

        function togglePrioritySubject(subj) {
            if (!settings.prioritySubjects) settings.prioritySubjects = [];
            
            if (settings.prioritySubjects.includes(subj)) {
                settings.prioritySubjects = settings.prioritySubjects.filter(s => s !== subj);
            } else {
                settings.prioritySubjects.push(subj);
            }
            renderSettingsPriority();
        }

        // --- LOGIC UTILS ---
        function addToLog(artifact, points, result) {
            const logEntry = {
                id: artifact.id,
                name: artifact.name,
                complexity: artifact.complexity,
                points: points,
                result: result, 
                date: new Date()
            };
            historyLog.unshift(logEntry);
            renderLog();
        }

        function renderLog() {
            const tbody = document.getElementById('log-table-body');
            const empty = document.getElementById('empty-log');
            
            if(historyLog.length === 0) {
                tbody.innerHTML = '';
                empty.classList.remove('hidden');
                return;
            }
            
            empty.classList.add('hidden');
            tbody.innerHTML = historyLog.map(entry => `
                <tr class="border-b border-white/5 hover:bg-white/5 transition">
                    <td class="p-4">
                        <div class="font-bold text-white">${entry.name}</div>
                        <div class="text-[10px] text-slate-500">${entry.date.toLocaleDateString()} ${entry.date.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</div>
                    </td>
                    <td class="p-4 uppercase text-xs font-bold ${entry.result === 'resolved' ? 'text-cyan-400' : 'text-red-500'}">
                        ${entry.result}
                    </td>
                    <td class="p-4 text-right font-bold ${entry.points > 0 ? 'text-yellow-400' : 'text-slate-600'}">
                        ${entry.points > 0 ? '+' : ''}${entry.points}
                    </td>
                </tr>
            `).join('');
        }

        function formatTime(seconds) {
            if (seconds <= 0) return "00:00";
            const m = Math.floor(seconds / 60);
            const s = seconds % 60;
            return `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
        }

        // --- UI UTILS ---
        function toggleModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal.classList.contains('hidden')) {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
            } else {
                modal.classList.add('hidden');
                modal.classList.remove('flex');
            }
        }
        
        // Settings Listeners
        document.getElementById('setting-peak').addEventListener('input', (e) => {
            document.getElementById('setting-peak-display').innerText = e.target.value;
        });

        function saveScheduleSettings() {
             saveData();
             tick();
             toggleModal('modal-schedule');
        }

        function saveSettings() {
            settings.peakHour = parseInt(document.getElementById('setting-peak').value);
            // priorities are already in settings.prioritySubjects via toggle function
            saveData();
            tick(); 
            renderArtifacts(); // Re-sort grid based on new priorities
            toggleModal('modal-settings');
        }

        // --- ROI POPUP ---
        function showROIModal(points, cpx, speed) {
            const modal = document.getElementById('roiModal');
            const content = document.getElementById('roiContent');
            
            document.getElementById('modalPoints').innerText = `+${points}`;
            document.getElementById('modalCpx').innerText = cpx;
            document.getElementById('modalSpeed').innerText = `${speed}%`;

            modal.classList.remove('hidden');
            modal.classList.add('flex');
            
            content.classList.remove('scale-100');
            content.classList.add('scale-95');
            setTimeout(() => {
                content.classList.remove('scale-95');
                content.classList.add('scale-100');
            }, 10);
        }

        function closeModal() {
            document.getElementById('roiModal').classList.add('hidden');
            document.getElementById('roiModal').classList.remove('flex');
        }

        // Init
        router('landing');

    </script>
</body>
</html>
