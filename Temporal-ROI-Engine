    <script>
        /* --- CORE SYSTEM VARIABLES --- */
        const APP_VERSION = "4.0.2";
        const DEFAULT_SUBJECTS = ["General", "Maths", "Biology", "Chemistry", "Physics", "History", "Literature", "Coding"];
        
        // State
        let user = null;
        let artifacts = [];
        let trashBin = [];
        let historyLog = [];
        let customSubjects = [];
        let weeklySchedule = [
            { id: 0, day: 'Sunday', active: false, start: '09:00', end: '17:00' },
            { id: 1, day: 'Monday', active: true, start: '09:00', end: '17:00' },
            { id: 2, day: 'Tuesday', active: true, start: '09:00', end: '17:00' },
            { id: 3, day: 'Wednesday', active: true, start: '09:00', end: '17:00' },
            { id: 4, day: 'Thursday', active: true, start: '09:00', end: '17:00' },
            { id: 5, day: 'Friday', active: true, start: '09:00', end: '17:00' },
            { id: 6, day: 'Saturday', active: false, start: '09:00', end: '17:00' }
        ];
        let settings = { 
            sound: true, 
            notifications: false,
            peakHour: 10 
        };
        let totalScore = 0;
        let engineInterval;
        let audioCtx = null; // Audio Context for synths

        /* --- INITIALIZATION --- */
        document.addEventListener('DOMContentLoaded', () => {
            loadData();
            
            // Router check
            if (user) {
                router('app');
                initEngine();
            } else {
                router('landing');
            }

            // Keyboard Shortcuts
            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'k') {
                    e.preventDefault();
                    document.getElementById('searchBar').focus();
                }
                if (e.ctrlKey && e.key === 'n') {
                    e.preventDefault();
                    document.getElementById('taskName').focus();
                }
            });
        });

        /* --- ROUTER & UI --- */
        function router(pageId) {
            document.querySelectorAll('.page-section').forEach(el => {
                el.classList.remove('active');
                setTimeout(() => { if(!el.classList.contains('active')) el.style.display = 'none'; }, 300);
            });

            const target = document.getElementById(`page-${pageId}`);
            target.style.display = (pageId === 'landing' || pageId === 'auth') ? 'flex' : 'block';
            setTimeout(() => target.classList.add('active'), 10);

            const authNav = document.getElementById('nav-auth-display');
            const guestNav = document.getElementById('nav-guest-display');
            
            if (pageId === 'app') {
                authNav.classList.remove('hidden');
                authNav.classList.add('flex');
                guestNav.classList.add('hidden');
            } else {
                authNav.classList.add('hidden');
                authNav.classList.remove('flex');
                guestNav.classList.remove('hidden');
            }
        }

        function toggleModal(id) {
            const el = document.getElementById(id);
            if (el.classList.contains('hidden')) {
                el.classList.remove('hidden');
                el.classList.add('flex');
                playSound('hover');
            } else {
                el.classList.add('hidden');
                el.classList.remove('flex');
            }
        }

        /* --- AUDIO ENGINE --- */
        function initAudio() {
            if (!settings.sound) return;
            if (!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        }

        function playSound(type) {
            if (!settings.sound) return;
            if (!audioCtx) initAudio();
            if (audioCtx.state === 'suspended') audioCtx.resume();

            const osc = audioCtx.createOscillator();
            const gain = audioCtx.createGain();
            osc.connect(gain);
            gain.connect(audioCtx.destination);

            const now = audioCtx.currentTime;

            if (type === 'hover') {
                osc.type = 'sine';
                osc.frequency.setValueAtTime(400, now);
                osc.frequency.exponentialRampToValueAtTime(600, now + 0.05);
                gain.gain.setValueAtTime(0.02, now);
                gain.gain.exponentialRampToValueAtTime(0.001, now + 0.05);
                osc.start(now);
                osc.stop(now + 0.05);
            } else if (type === 'success') {
                osc.type = 'triangle';
                osc.frequency.setValueAtTime(440, now);
                osc.frequency.setValueAtTime(554, now + 0.1); // C#
                osc.frequency.setValueAtTime(659, now + 0.2); // E
                gain.gain.setValueAtTime(0.1, now);
                gain.gain.linearRampToValueAtTime(0, now + 0.4);
                osc.start(now);
                osc.stop(now + 0.4);
            } else if (type === 'delete') {
                osc.type = 'sawtooth';
                osc.frequency.setValueAtTime(100, now);
                osc.frequency.exponentialRampToValueAtTime(50, now + 0.2);
                gain.gain.setValueAtTime(0.1, now);
                gain.gain.linearRampToValueAtTime(0, now + 0.2);
                osc.start(now);
                osc.stop(now + 0.2);
            } else if (type === 'alert') {
                osc.type = 'square';
                osc.frequency.setValueAtTime(800, now);
                osc.frequency.setValueAtTime(400, now + 0.1);
                gain.gain.setValueAtTime(0.1, now);
                gain.gain.linearRampToValueAtTime(0, now + 0.2);
                osc.start(now);
                osc.stop(now + 0.2);
            }
        }

        /* --- AUTH --- */
        function login() {
            const input = document.getElementById('auth-username');
            if (input.value.trim().length > 0) {
                user = input.value;
                localStorage.setItem('chronos_user', user);
                playSound('success');
                initEngine();
                router('app');
            }
        }

        /* --- ENGINE CORE --- */
        function initEngine() {
            if (engineInterval) clearInterval(engineInterval);
            renderSubjectOptions();
            renderArtifacts();
            renderSchedule();
            // updateStats(); // Removed as it was undefined
            
            engineInterval = setInterval(tick, 1000);
            tick(); // Run immediately to initialize UI
            
            // Request Notification Permission if previously enabled
            if (settings.notifications && Notification.permission !== "granted") {
                Notification.requestPermission();
            }
        }

        function tick() {
            const now = new Date();
            
            // Clock
            document.getElementById('navTime').innerText = now.toLocaleTimeString('en-GB', { hour12: false });

            // Bio-Capacity
            const hour = now.getHours() + (now.getMinutes() / 60);
            const peak = settings.peakHour;
            const dist = Math.abs(hour - peak);
            let energy = dist < 4 ? 100 - (dist * 10) : 60 - ((dist - 4) * 5);
            energy = Math.max(10, Math.min(100, Math.round(energy)));
            
            document.getElementById('navEnergy').innerText = `${energy}%`;
            document.getElementById('appEnergyDisplay').innerText = `${energy}%`;
            
            // Task Decay & Tracking
            const isWorkingHours = checkWorkingHours(now);
            let needsRender = false;

            artifacts.forEach(art => {
                // Tracking Time
                if (art.isTracking) {
                    art.actualTime = (art.actualTime || 0) + 1;
                    needsRender = true; // Update stopwatch display
                }

                // Decay Logic
                if (art.status === 'active' && isWorkingHours) {
                    art.timeLeft--;
                    
                    // Notification Trigger (once per task)
                    if (settings.notifications && !art.notified && (art.timeLeft / art.totalTime) < 0.2) {
                        new Notification(`CRITICAL DECAY: ${art.name}`, { body: "Artifact integrity below 20%. Immediate action required." });
                        playSound('alert');
                        art.notified = true;
                    }

                    if (art.timeLeft <= 0) {
                        art.timeLeft = 0;
                        art.status = 'decayed';
                        playSound('delete');
                        needsRender = true;
                    } else if (now.getSeconds() % 10 === 0) {
                        needsRender = true; // Update bars occasionally
                    }
                }
            });

            if (needsRender || now.getSeconds() % 60 === 0) {
                saveData(); // Auto-save
                if(needsRender) renderArtifacts(false); // False = don't hard redraw if only updating time/bars (simplified here)
            }
            
            updateAI(energy, isWorkingHours);
        }

        function checkWorkingHours(date) {
            const dayId = date.getDay();
            const sched = weeklySchedule.find(d => d.id === dayId);
            if (!sched.active) return false;
            
            const nowMins = date.getHours() * 60 + date.getMinutes();
            const [sH, sM] = sched.start.split(':').map(Number);
            const [eH, eM] = sched.end.split(':').map(Number);
            
            return nowMins >= (sH * 60 + sM) && nowMins < (eH * 60 + eM);
        }

        /* --- ARTIFACT MANAGEMENT --- */
        function createArtifact() {
            const name = document.getElementById('taskName').value;
            if (!name) return alert("Artifact Designation Required");

            const desc = document.getElementById('taskDesc').value;
            const subtext = document.getElementById('taskSubtasks').value;
            const subject = document.getElementById('taskSubject').value;
            const complexity = parseInt(document.getElementById('taskComplexity').value);
            const duration = parseInt(document.getElementById('taskDuration').value);

            let subtasks = [];
            if(subtext.trim()) {
                subtasks = subtext.split('\n').filter(l => l.trim()).map(txt => ({ text: txt.replace(/^- /, ''), done: false }));
            }

            const newArt = {
                id: Date.now(),
                name,
                desc,
                subject,
                complexity,
                totalTime: duration * 60,
                timeLeft: duration * 60,
                actualTime: 0,
                status: 'active',
                created: new Date(),
                subtasks,
                isTracking: false,
                notified: false
            };

            artifacts.push(newArt);
            document.getElementById('taskName').value = '';
            document.getElementById('taskDesc').value = '';
            document.getElementById('taskSubtasks').value = '';
            
            playSound('success');
            saveData();
            renderArtifacts();
        }

        function toggleTrack(id) {
            const art = artifacts.find(a => a.id === id);
            if(art) {
                // Pause all others
                artifacts.forEach(a => { if(a.id !== id) a.isTracking = false; });
                art.isTracking = !art.isTracking;
                renderArtifacts();
            }
        }

        function toggleSubtask(artId, idx) {
            const art = artifacts.find(a => a.id === artId);
            if(art && art.subtasks[idx]) {
                art.subtasks[idx].done = !art.subtasks[idx].done;
                saveData();
                renderArtifacts();
            }
        }

        function deleteArtifact(id) {
            const art = artifacts.find(a => a.id === id);
            if(art) {
                if(confirm("Move artifact to Void?")) {
                    trashBin.push(art);
                    artifacts = artifacts.filter(a => a.id !== id);
                    playSound('delete');
                    saveData();
                    renderArtifacts();
                }
            }
        }

        function completeArtifact(id) {
            const art = artifacts.find(a => a.id === id);
            if(art) {
                playSound('success');
                fireConfetti();
                
                const ratio = art.timeLeft / art.totalTime;
                const points = Math.round((ratio * art.complexity * 100) + (art.complexity * 50));
                
                totalScore += points;
                document.getElementById('navScore').innerText = totalScore;
                
                // Add to log
                historyLog.unshift({ name: art.name, date: new Date(), points });
                
                showROI(points);
                
                artifacts = artifacts.filter(a => a.id !== id);
                saveData();
                renderArtifacts();
            }
        }

        /* --- UI RENDERING --- */
        function renderArtifacts() {
            const grid = document.getElementById('artifactGrid');
            const search = document.getElementById('searchBar').value.toLowerCase();
            const subjectFilter = document.getElementById('filterSubject').value;
            const statusFilter = document.getElementById('filterStatus').value;
            
            let filtered = artifacts.filter(a => {
                if (search && !a.name.toLowerCase().includes(search)) return false;
                if (subjectFilter !== 'all' && a.subject !== subjectFilter) return false;
                if (statusFilter !== 'all' && a.status !== statusFilter) return false;
                return true;
            });

            // Sort: Tracking first, then Decayed last, then by urgency
            filtered.sort((a,b) => {
                if (a.isTracking) return -1;
                if (b.isTracking) return 1;
                if (a.status === 'decayed') return 1;
                if (b.status === 'decayed') return -1;
                return (a.timeLeft/a.totalTime) - (b.timeLeft/b.totalTime);
            });

            document.getElementById('activeTaskCount').innerText = artifacts.filter(a=>a.status==='active').length;
            
            if (filtered.length === 0) {
                grid.innerHTML = '';
                document.getElementById('emptyState').classList.remove('hidden');
                return;
            }
            document.getElementById('emptyState').classList.add('hidden');

            grid.innerHTML = filtered.map(art => {
                const pct = (art.timeLeft / art.totalTime) * 100;
                const isCritical = pct < 20 && art.status === 'active';
                const isDecayed = art.status === 'decayed';
                
                let subtaskHTML = '';
                if(art.subtasks && art.subtasks.length > 0) {
                    const doneCount = art.subtasks.filter(s=>s.done).length;
                    subtaskHTML = `
                        <div class="mt-3 bg-black/40 p-2 rounded border border-white/5">
                            <div class="text-[10px] uppercase text-slate-500 mb-1">Checklist (${doneCount}/${art.subtasks.length})</div>
                            <div class="space-y-1">
                                ${art.subtasks.map((s, i) => `
                                    <div class="checklist-item flex items-center gap-2 cursor-pointer ${s.done ? 'completed' : ''}" onclick="toggleSubtask(${art.id}, ${i})">
                                        <div class="w-3 h-3 rounded-sm border ${s.done ? 'bg-cyan-400 border-cyan-400' : 'border-slate-600'}"></div>
                                        <span class="text-xs text-slate-300 truncate">${s.text}</span>
                                    </div>
                                `).join('')}
                            </div>
                        </div>
                    `;
                }

                return `
                <div class="artifact-card p-5 rounded-xl ${isDecayed ? 'opacity-50 grayscale' : ''} ${art.isTracking ? 'border-cyan-400 shadow-[0_0_15px_rgba(0,242,255,0.1)]' : ''}">
                    <div class="flex justify-between items-start mb-3">
                        <div class="flex flex-col gap-1">
                            <span class="subject-badge bg-white/10 text-slate-300 w-max">${art.subject}</span>
                            <h3 class="font-bold text-lg leading-tight text-white">${art.name}</h3>
                            ${art.desc ? `<p class="text-xs text-slate-400 line-clamp-2">${art.desc}</p>` : ''}
                        </div>
                        <div class="flex gap-2">
                             ${!isDecayed ? `
                             <button onclick="toggleTrack(${art.id})" class="w-8 h-8 rounded-full border flex items-center justify-center transition ${art.isTracking ? 'bg-red-500 border-red-500 text-white animate-pulse' : 'border-white/20 text-slate-400 hover:text-white hover:border-white'}">
                                <i class="fa-solid ${art.isTracking ? 'fa-pause' : 'fa-play'}"></i>
                             </button>
                             <button onclick="completeArtifact(${art.id})" class="w-8 h-8 rounded-full border border-green-500/30 text-green-500 hover:bg-green-500 hover:text-black transition flex items-center justify-center">
                                <i class="fa-solid fa-check"></i>
                             </button>` : ''}
                             <button onclick="deleteArtifact(${art.id})" class="w-8 h-8 rounded-full border border-white/10 text-slate-500 hover:text-red-500 transition flex items-center justify-center">
                                <i class="fa-solid fa-times"></i>
                             </button>
                        </div>
                    </div>
                    
                    ${subtaskHTML}

                    <div class="mt-4">
                        <div class="flex justify-between text-[10px] uppercase text-slate-500 mb-1 mono">
                            <span class="${isCritical ? 'text-red-500 animate-pulse' : ''}">${isDecayed ? 'DISSOLVED' : formatTime(art.timeLeft)} Remaining</span>
                            <span>Tracked: ${formatTime(art.actualTime)}</span>
                        </div>
                        <div class="decay-bar bg-slate-800">
                            <div class="decay-progress ${isCritical ? 'bg-red-500 critical-decay' : 'bg-cyan-400'}" style="width: ${pct}%"></div>
                        </div>
                    </div>
                </div>
                `;
            }).join('');
        }

        function renderSubjectOptions() {
            const allSubs = [...DEFAULT_SUBJECTS, ...customSubjects];
            const opts = allSubs.map(s => `<option value="${s}">${s}</option>`).join('');
            
            document.getElementById('taskSubject').innerHTML = opts;
            document.getElementById('filterSubject').innerHTML = `<option value="all">All Subjects</option>` + opts;
            
            // Settings list
            const setList = document.getElementById('settings-subject-list');
            setList.innerHTML = customSubjects.map(s => `
                <div class="bg-white/10 px-2 py-1 rounded text-xs text-white flex gap-2 items-center">
                    ${s} <i class="fa-solid fa-times cursor-pointer hover:text-red-500" onclick="removeSubject('${s}')"></i>
                </div>
            `).join('');
        }
        
        /* --- AI & LOGIC --- */
        function updateAI(energy, isWorking) {
            const h = document.getElementById('suggestion-headline');
            const r = document.getElementById('suggestion-reason');
            const stat = document.getElementById('schedule-status-display');
            
            stat.innerText = isWorking ? "SYSTEM ACTIVE" : "SYSTEM STANDBY";
            stat.className = isWorking ? "text-[10px] mono text-cyan-400 animate-pulse" : "text-[10px] mono text-slate-500";

            if (!isWorking) {
                h.innerText = "STANDBY MODE";
                r.innerText = "Outside operational hours. Recover biological resources.";
                return;
            }

            if (artifacts.length === 0) {
                h.innerText = "AWAITING INPUT";
                r.innerText = "No artifacts detected. Initialize new protocols.";
                return;
            }

            // Simple Priority Algorithm
            const active = artifacts.filter(a => a.status === 'active');
            if (active.length > 0) {
                const best = active.sort((a,b) => (a.timeLeft/a.totalTime) - (b.timeLeft/b.totalTime))[0];
                h.innerHTML = `FOCUS: <span class="text-cyan-400">${best.name}</span>`;
                r.innerText = `Highest decay rate detected. Immediate attention recommended.`;
            } else {
                h.innerText = "ALL CLEAR";
                r.innerText = "All active artifacts resolved.";
            }
        }

        /* --- DATA PERSISTENCE --- */
        function saveData() {
            const data = {
                user, artifacts, trashBin, historyLog, customSubjects, weeklySchedule, settings, totalScore
            };
            localStorage.setItem('chronos_omega_data', JSON.stringify(data));
        }

        function loadData() {
            const raw = localStorage.getItem('chronos_omega_data');
            if(raw) {
                const data = JSON.parse(raw);
                user = data.user;
                artifacts = data.artifacts || [];
                trashBin = data.trashBin || [];
                historyLog = data.historyLog || [];
                customSubjects = data.customSubjects || [];
                weeklySchedule = data.weeklySchedule || weeklySchedule;
                settings = data.settings || settings;
                totalScore = data.totalScore || 0;
                
                // Hydrate dates not needed for simple math but good practice
                document.getElementById('navScore').innerText = totalScore;
                document.getElementById('setting-sound').checked = settings.sound;
                document.getElementById('setting-notifs').checked = settings.notifications;
            } else {
                // Check legacy
                if(localStorage.getItem('chronos_user')) {
                   user = localStorage.getItem('chronos_user');
                }
            }
        }

        function exportData() {
            saveData();
            const dataStr = localStorage.getItem('chronos_omega_data');
            const blob = new Blob([dataStr], {type: "application/json"});
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `chronos_backup_${new Date().toISOString().slice(0,10)}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
        }

        function importData(input) {
            const file = input.files[0];
            if (!file) return;
            const reader = new FileReader();
            reader.onload = (e) => {
                try {
                    const data = JSON.parse(e.target.result);
                    if (data.user && data.artifacts) { // Simple validation
                        localStorage.setItem('chronos_omega_data', JSON.stringify(data));
                        location.reload();
                    } else {
                        alert("Invalid Chronos file.");
                    }
                } catch(err) { alert("Corrupt file."); }
            };
            reader.readAsText(file);
        }

        function wipeData() {
            if(confirm("CRITICAL WARNING: This will permanently erase all local data. Continue?")) {
                localStorage.clear();
                location.reload();
            }
        }

        /* --- TRASH & RECOVERY --- */
        function updateTrashView() {
            const div = document.getElementById('trash-container');
            if (trashBin.length === 0) {
                div.innerHTML = '<div class="p-8 text-center text-slate-500 text-xs uppercase tracking-widest">Void is empty</div>';
                return;
            }
            div.innerHTML = trashBin.map((art, idx) => `
                <div class="flex justify-between items-center p-3 border-b border-white/5 hover:bg-white/5">
                    <span class="text-sm text-slate-300">${art.name}</span>
                    <button onclick="restoreArtifact(${idx})" class="text-xs text-cyan-400 hover:text-white uppercase">Restore</button>
                </div>
            `).join('');
        }
        
        function restoreArtifact(idx) {
            const art = trashBin.splice(idx, 1)[0];
            art.status = 'active'; // Reset status if it was decayed
            artifacts.push(art);
            saveData();
            renderArtifacts();
            updateTrashView();
            toggleModal('modal-trash'); // Close to show result
        }

        function emptyTrash() {
            if(confirm("Permanently delete items in Void?")) {
                trashBin = [];
                saveData();
                updateTrashView();
            }
        }

        // Hook trash view update
        document.querySelector('button[onclick="toggleModal(\'modal-trash\')"]').addEventListener('click', updateTrashView);

        /* --- SETTINGS LOGIC --- */
        function saveSettingsLocal() {
            settings.sound = document.getElementById('setting-sound').checked;
            saveData();
        }

        function requestNotifs(cb) {
            if (cb.checked) {
                Notification.requestPermission().then(perm => {
                    if (perm === 'granted') {
                        settings.notifications = true;
                        new Notification("Chronos System", { body: "Notifications Active" });
                    } else {
                        cb.checked = false;
                        alert("Permission denied by browser.");
                    }
                    saveData();
                });
            } else {
                settings.notifications = false;
                saveData();
            }
        }

        function addCustomSubject() {
            const inp = document.getElementById('newSubjectInput');
            const val = inp.value.trim();
            if(val && !customSubjects.includes(val) && !DEFAULT_SUBJECTS.includes(val)) {
                customSubjects.push(val);
                inp.value = '';
                saveData();
                renderSubjectOptions();
            }
        }

        function removeSubject(sub) {
            customSubjects = customSubjects.filter(s => s !== sub);
            saveData();
            renderSubjectOptions();
        }

        /* --- VISUALS --- */
        function showROI(points) {
            document.getElementById('modalPoints').innerText = `+${points}`;
            document.getElementById('roiModal').classList.remove('hidden');
            document.getElementById('roiModal').classList.add('flex');
            
            const logs = document.getElementById('log-table-body');
            logs.innerHTML = historyLog.map(h => `
                <tr class="border-b border-white/5">
                    <td class="p-3 text-white">${h.name}</td>
                    <td class="p-3 text-slate-500 text-xs">${new Date(h.date).toLocaleTimeString()}</td>
                    <td class="p-3 text-right text-yellow-400 font-bold">+${h.points}</td>
                </tr>
            `).join('');
        }

        function closeModal() {
            document.getElementById('roiModal').classList.add('hidden');
            document.getElementById('roiModal').classList.remove('flex');
        }

        function formatTime(sec) {
            if(isNaN(sec) || sec < 0) return "00:00";
            const m = Math.floor(sec / 60);
            const s = Math.floor(sec % 60);
            return `${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        }
        
        function renderSchedule() {
            const cont = document.getElementById('schedule-container');
            cont.innerHTML = weeklySchedule.map(d => `
                <div class="flex items-center justify-between bg-black/30 p-2 rounded mb-2 border border-white/5">
                    <span class="w-24 text-sm font-bold ${d.active ? 'text-white' : 'text-slate-600'}">${d.day}</span>
                    <input type="checkbox" ${d.active ? 'checked' : ''} onchange="updateDay(${d.id}, 'active', this.checked)" class="accent-cyan-400">
                    <div class="${d.active ? '' : 'opacity-20 pointer-events-none'}">
                        <input type="time" value="${d.start}" onchange="updateDay(${d.id}, 'start', this.value)" class="bg-black text-white text-xs border border-slate-700 rounded p-1">
                        <input type="time" value="${d.end}" onchange="updateDay(${d.id}, 'end', this.value)" class="bg-black text-white text-xs border border-slate-700 rounded p-1">
                    </div>
                </div>
            `).join('');
        }

        function updateDay(id, field, val) {
            const d = weeklySchedule.find(x => x.id === id);
            if(d) d[field] = val;
            saveData();
            renderSchedule();
        }

        /* --- CONFETTI --- */
        function fireConfetti() {
            const canvas = document.getElementById('confetti-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const particles = [];
            for(let i=0; i<100; i++) {
                particles.push({
                    x: window.innerWidth / 2,
                    y: window.innerHeight / 2,
                    vx: (Math.random() - 0.5) * 15,
                    vy: (Math.random() - 0.5) * 15,
                    color: `hsl(${Math.random()*360}, 100%, 50%)`,
                    life: 100
                });
            }
            
            function anim() {
                ctx.clearRect(0,0,canvas.width, canvas.height);
                let active = false;
                particles.forEach(p => {
                    if(p.life > 0) {
                        active = true;
                        p.x += p.vx;
                        p.y += p.vy;
                        p.life--;
                        ctx.fillStyle = p.color;
                        ctx.globalAlpha = p.life / 100;
                        ctx.fillRect(p.x, p.y, 4, 4);
                    }
                });
                if(active) requestAnimationFrame(anim);
                else ctx.clearRect(0,0,canvas.width, canvas.height);
            }
            anim();
        }
    </script>
</body>
</html>
