    <!-- ROI SUCCESS POPUP -->
    <div id="roiModal" class="fixed inset-0 z-[100] hidden items-center justify-center bg-black/90 p-4 backdrop-blur-sm transition-opacity duration-300">
        <div class="artifact-card p-8 md:p-12 rounded-3xl text-center max-w-md w-full shadow-[0_0_50px_rgba(0,242,255,0.2)] transform scale-95 transition-transform duration-300" id="roiContent">
